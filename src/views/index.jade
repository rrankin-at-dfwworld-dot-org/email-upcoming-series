doctype transitional
html(xmlns='http://www.w3.org/1999/xhtml')
  head
    meta(http-equiv='Content-Type', content='text/html; charset=UTF-8')
    title #{ data.global.title }
    link(href="css/style.css", rel="stylesheet", type="text/css")
    include helperFunctions
  body(leftmargin='0', marginwidth='0', topmargin='0', marginheight='0', offset='0')
    center
      table#bodyTable(align='center', border='0', cellpadding='0', cellspacing='0', height='100%', width='100%')
        tr
          td#bodyCell(align='center', valign='top')
            table#templateContainer(border='0', cellpadding='0', cellspacing='0')
              tr
                td#templatePreheader.preheaderContent(align='center', valign='top')
                  include partials/header/preheader         
              tr
                td(align='center', valign='top')
                  // BEGIN HEADER //
                  table#templateHeader(border='0', cellpadding='0', cellspacing='0', width='100%')
                    tr
                      td.headerContent(valign='top')
                        img#headerImage(src='#{ data.global.img.header }', style='max-width:600px;')
                  // // END HEADER
              if(data.featured)
                include partials/featured
              if(data.body)             
                include partials/body
              if(data.columns)
                include partials/columns             
              tr
                td#templateFooter.footerContent(align='center', valign='top')
                  // BEGIN FOOTER //
                  include partials/header/email-links
                  // // END FOOTER
            // // END TEMPLATE
