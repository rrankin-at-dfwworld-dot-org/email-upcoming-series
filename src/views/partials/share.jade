table(align="center", border='0', cellpadding='0', cellspacing='0', height='80')
  tbody
    tr(style='border-collapse: collapse;')
      td.icon-container(valign='bottom', align='right', width='30%', height='60')
        a(href='#{ permalink }#FB-Like')
          img(src='http://www.dfwworld.org/image/facebook_icon_blue_round.gif', alt='Facebook icon', border='0', height='40', width='40')
        a.text(href='#{ permalink }#FB-Like') Like
      td.icon-container(valign='bottom', align='right', width='30%', height='60')
        a(href='#{ permalink }#Tweet')
          img(src='http://www.dfwworld.org/image/twitter_icon_blue_round.gif', alt='Twitter icon', border='0', height='40', width='40')
        a.text(href='#{ permalink }#Tweet') Tweet
      td.icon-container(valign='bottom', align='right', width='30%', height='60')
        a(href='#{ forwardThis }')
          img(src='http://www.dfwworld.org/image/email_icon_blue_round.gif', alt='Forward icon', border='0', height='40', width='40')
        a.text(href='#{ forwardThis }') Forward
