tr.main-content(bgcolor='#E6E7E4')
  td.right(valign='top', width='600', align='right')
    table(style='float: right; margin: 0 0 5px 15px', width="240", align='right')
      tbody
        tr
          td.imageContainer
            - if(story.url)
              a(href="#{story.url}", target="_blank")
                img(label='image', src='#{ imgURL }', height='auto', width='240', align='right')
            - else
              img(label='image', src='#{ imgURL }', height='auto', width='240', align='right')
        - if(story.caption)
          include photo-caption
    a(name='toc_item_#{ count }')
    h2 !{ story.title }
    - each paragraph in story.body
      p !{ paragraph }